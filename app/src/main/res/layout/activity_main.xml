<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orang"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <Button
            android:id="@+id/button5"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_gravity="center_horizontal"
            android:text="BODY PAINS" />

        <Button
            android:id="@+id/button6"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="BREATHING PROBLEMS" />

        <Button
            android:id="@+id/button7"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button6"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="DIABETES" />

        <Button
            android:id="@+id/button8"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button7"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="DEPRESSION" />

        <Button
            android:id="@+id/button9"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button8"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="OBESITY" />

        <Button
            android:id="@+id/button10"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button9"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="YOGA ASANAS FOR DAILY LIFE" />

        <Button
            android:id="@+id/button18"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button10"
            android:text="YOGA CENTERS NEAR ME"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>
</ScrollView>